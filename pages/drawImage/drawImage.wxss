.containerbody {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 20px;
}

.form-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10px;
  width: 100%;
}

.form-group text {
  margin-right: 10px;
}

textarea {
  width: 100%;
  height: 80px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  resize: none;
  word-wrap: break-word;
  max-width: 60%;
}

.picker {
  padding: 5px 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.btn-generate {
  margin-top: 20px;
  margin-bottom: 20px;
  padding: 10px 20px;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 5px;
}

.image {
  margin-top: 40px;
  width: 100%;
  height: auto;
}
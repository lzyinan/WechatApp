.page {
  padding: 24rpx;
  background-color: #f5f5f5;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 10px;
}

.form-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label {
  width: 160rpx;
}

.input {
  flex: 1;
  border: 1rpx solid #ddd;
  padding: 14rpx 18rpx;
  border-radius: 10rpx;
  background-color: #fafafa;
}

.btn-small {
  margin-left: 10rpx;
}

.btn-block {
  width: 100%;
  margin-top: 20rpx;
  background-color: #007aff;
  color: white;
}

.btn-primary {
  width: 100%;
  margin-top: 30rpx;
  background-color: #28a745;
  color: white;
}

.btn-clear {
  background-color: #f56c6c;
  color: white;
  border-radius: 10rpx;
  font-size: 24rpx;
  padding: 4rpx 14rpx;
}

.tag-group {
  flex-wrap: wrap;
  display: flex;
  gap: 10rpx;
  margin-top: 10rpx;
}

.tag {
  background-color: #007aff;
  color: #fff;
  padding: 8rpx 18rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
}

.round-item {
  margin-top: 10rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.round-title {
  font-weight: bold;
  margin-bottom: 6rpx;
}

.winner {
  color: #28a745;
  font-weight: bold;
  font-size: 30rpx;
  padding: 8rpx 0;
}

.normal {
  padding: 6rpx 0;
}
.green {
  background-color: #28a745;
  color: white;
}
.positive {
  color: #e64340; /* 红色，代表正数（赢） */
  font-weight: bold;
  line-height: 1;
  margin-left: 4rpx;
}

.negative {
  color: #07c160; /* 绿色，代表负数（输） */
  font-weight: bold;
  line-height: 1;
  margin-left: 4rpx;
}
.round-records {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 10rpx;
}

.round-records {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 10rpx;
}

.record-chip {
  display: inline-flex;
  align-items: center;  
  padding: 6rpx 12rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  font-size: 26rpx;
  white-space: nowrap;
}
.rounds-container {
  max-height: 700rpx; /* 3条记录高度 */
  overflow-y: scroll;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 10rpx;
  margin-top: 20rpx;
}

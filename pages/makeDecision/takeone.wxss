.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.turntable {
  position: relative;
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 50rpx;
}

.turntable-bg {
  width: 400rpx;
  height: 400rpx;
}

.turntable-item {
  position: absolute;
  width: 400rpx;
  height: 400rpx;
  background-color: #feca57;
  border-radius: 50%;
  box-shadow: 0 4rpx 4rpx rgba(0, 0, 0, 0.1);
  transform-origin: 50% 100%;
  transition: transform 5s ease-out;
}

.turntable-item:nth-child(odd) {
  background-color: #ff6b6b;
}

.turntable-item:nth-child(1) {
  transform: rotate(0deg);
}

.turntable-item:nth-child(2) {
  transform: rotate(60deg);
}

.turntable-item:nth-child(3) {
  transform: rotate(120deg);
}

.turntable-item:nth-child(4) {
  transform: rotate(180deg);
}

.turntable-item:nth-child(5) {
  transform: rotate(240deg);
}

.turntable-item:nth-child(6) {
  transform: rotate(300deg);
}

.turntable-pointer {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100rpx;
  height: 100rpx;
  margin-top: -50rpx;
  margin-left: -50rpx;
  z-index: 2;
}
